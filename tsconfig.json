      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "/opt/nodejs/productsLayer":[
        "../../Documents/Workspace/EcommerceAWS-serverless/lambda/products/layers/productsLayer/nodejs/productRepository"
      ]
